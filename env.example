# Next.js Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (for authentication)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OAuth Redirect URL (optional - defaults to current origin)
# For production: https://yourdomain.com/auth/callback?next=/study
# For development: http://localhost:3000/auth/callback?next=/study
NEXT_PUBLIC_REDIRECT_URL=http://localhost:3000/auth/callback?next=/study

# Backend API URL (your Spring Boot backend)
BACKEND_URL=http://localhost:8080

# YouTube API URL (FastAPI backend for YouTube analysis)
NEXT_PUBLIC_YT_API_URL=https://backend-fastapi-94xx.onrender.com

# OpenAI Configuration (for chat)
OPENAI_API_KEY=your_openai_api_key

# Optional: Backend API Authentication
BACKEND_SECRET=your_backend_secret_key
